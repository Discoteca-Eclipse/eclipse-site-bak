---
import welcome from '../assets/videos/welcome.mp4';
---

<div class="video-container">
  <video class="mobile-video" autoplay loop muted onvolumechange="this.muted = !this.muted">
    <source src={welcome} type="video/mp4">
  </video>
</div>

<style lang="scss">
  .video-container {
    width: 100%;
    height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
    overflow: hidden;
    position: relative;

    .logo-container {
      position: absolute;
      inset: 0;
      height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    video {
      height: 100vh;
      width: 100%;
      overflow: hidden;
      object-fit: cover;
      display: none;

      &.mobile-video {
        display: block;
      }
    }
  }


  @media (min-width: 1080px) {
    .video-container {
      video {
        &.mobile-video {
          display: none;
        }
        &.desktop-video {
          display: block;
        }
      }
    }
  }
</style>
