---
import './HomeVideo.scss'
---

<section class="video-container">
  <video class="mobile-video" autoplay loop muted playsinline>
    <source src="https://res.cloudinary.com/dzb2wocuz/video/upload/v1742552583/zued80kb0oeywkzcaywk.mp4" type="video/mp4">
  </video>

  <video class="desktop-video" autoplay loop muted playsinline>
    <source src="https://res.cloudinary.com/dzb2wocuz/video/upload/v1742552680/welcome-desktop_bjto7l.mp4" type="video/mp4">
  </video>

  <img src="https://res.cloudinary.com/dzb2wocuz/image/upload/v1743173705/scroll-down-mouse_mzvh2m.gif" alt="scroll down" class="scroll-down"/>

  <div class="gradient"></div>
</section>

<script is:inline>
  document.addEventListener('DOMContentLoaded', () => {
    document.addEventListener('scroll', () => {
      if (window.scrollY > 100) {
        document.querySelector('.scroll-down').classList.remove('fade-in')
        document.querySelector('.scroll-down').classList.add('fade-out')
      } else {
        document.querySelector('.scroll-down').classList.remove('fade-out')
        document.querySelector('.scroll-down').classList.add('fade-in')
      }
    })
  })
</script>
