---
interface Props {
  containerClass: string;
}

const {containerClass} = Astro.props as Props;
---

<section class="section" class:list={containerClass}>
  <slot/>
</section>

<style lang="scss" is:inline>
  .section {
    padding: 2rem;
  }

  @media (min-width: 768px) {
    .section {
      padding: 3rem;
    }
  }
</style>
